{
  "manifest_version": 2,
  "name": "DonatIO Extension",
  "version": "0.1",

  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/gp/buy/spc/handlers/display.html*"
      ],
      "js": ["scripts/jquery-3.5.1.min.js", "context/AmazonInsertion.js"]
    }
  ],

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
     "activeTab"
   ],
  "background": {
    "scripts": ["scripts/background.js"]
  }
}
