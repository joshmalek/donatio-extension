{
  "name": "DonatIO Extension",
  "version": "1.0",
  "description": "Donate to charities along with your checkout with this simple extension!",
  "permissions": ["activeTab", "declarativeContent", "https://www.amazon.com/"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/logo.png"
  },
  "manifest_version": 2
}
